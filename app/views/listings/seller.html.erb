<table class="table table-striped table-bordered">
  <tr>
    <th class="center">사진</th>
    <th class="center">품목</th>
    <th class="center">설명</th>
    <th class="center">가격</th>
    <th class="center">액션</th>
  </tr>

  <% @listings.each do |listing| %>
  <tr>
    <td>
      <%= link_to  image_tag(listing.image.url(:thumb)), listing %>
    </td>
    <td><%= listing.name %></td>
    <td><%= listing.description %></td>
    <td><%= number_to_currency(listing.price) %></td>
    <td>
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Action <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to '편집', edit_listing_path(listing), class: "btn btn-link" %></li>
          <li><%= link_to '삭제', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
        </ul>
      </div>
    </td>
  </tr>
  <% end %>
</table>

<% if (user_signed_in?) %>
    <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>