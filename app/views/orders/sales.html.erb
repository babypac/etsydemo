<div class="center">
  <h2>물품 판매목록</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">사진</th>
    <th class="center">품목</th>
    <th class="center">가격</th>
    <th class="center">구매자</th>
    <th class="center">구매일</th>
  </tr>

  <% @orders.each do |order| %>
      <tr>
        <td class="center">
          <%= link_to  image_tag(order.listing.image.url(:thumb)), order.listing %>
        </td>
        <td class="center"><%= order.listing.name %></td>
        <td class="center"><%= number_to_currency(order.listing.price) %></td>
        <td class="center"><%= order.buyer.name %></td>
        <td class="center"><%= order.created_at.strftime("%B %-d %Y") %></td>
      </tr>
  <% end %>
</table>

<% if (user_signed_in?) %>
    <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>